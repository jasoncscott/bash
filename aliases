# =============================================================================

unalias groups 2>/dev/null
.groups() {
    if [ $# -eq 0 ]; then
        set -- ${USER}
    fi

    for user in ${@}; do
        echo ${user}
        \groups ${user} | sed 's|^.*: ||' | sed 's| |\n|g' | sort | nl
     done
}
alias groups='.groups'

# =============================================================================

unalias id 2>/dev/null
.id() {
    \id ${@} | sed 's|[ ,]|\n|g' | sed 's|groups=|groups=\n|' | nl -b 'p^[0-9]'
}
alias id='.id'
alias ids='.id'

# =============================================================================

.ll() {
   ls -lAh --color=always ${@} | more
}
alias ll='.ll'

# =============================================================================

mate-terminal-tab-name () {
    echo -n -e "\033]0;â˜…${1}\007"
}

# =============================================================================

calc() {
    echo "${@}" | bc
}
